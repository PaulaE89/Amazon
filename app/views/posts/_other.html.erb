<h1>Posts</h1>
<% if user_signed_in? && current_user.admin? %>
    <%= link_to "crear nuevo post", new_post_path %>
<% end %>  
<table>
<thead>

<tr>
<th>ID</th>
<th>USER</th>
<th>TITLE</th>
<th>CONTENT</th>
</tr>
</thead>

    <tbody>

        <% @posts.each do |post| %>
            <tr>
                <td>Post id: <% post.id %></td>
                <td>User:<%= post.user.email %></td>
                <td>Title: <%= post.title %></td>
                <td>Content: <%= post.content %> </td>
                
                <td>
                    <%= link_to "Mostar post", post_path(post.id) %>
                    <% if user_signed_in? && current_user.admin? %>
                        <%= link_to "Editar", edit_post_path(post.id)%>
                        <%= link_to "Eliminar", post_path(post), method: :delete, data: {confirm: "are you sure?"} %>
                    <% end %>  
                </td>
            </tr>
        <% end %>
    </tbody>
</table>


